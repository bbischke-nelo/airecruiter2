# AI Recruiter v2 Environment Variables
# Copy this to .env and fill in the values

# =============================================================================
# DATABASE
# =============================================================================
DATABASE_URL=mssql+pyodbc://user:password@server/database?driver=ODBC+Driver+18+for+SQL+Server&TrustServerCertificate=yes

# =============================================================================
# SECURITY
# =============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
ENCRYPTION_KEY=your-32-byte-encryption-key-here

# =============================================================================
# SSO / AUTHENTICATION
# =============================================================================
SSO_ENABLED=true
SSO_URL=https://sso.ccfs.com
SSO_ISSUER=https://sso.ccfs.com
SSO_PUBLIC_KEY_PATH=/app/keys/public_key.pem
SSO_APP_SECRET=
DEV_LOGIN_ENABLED=false
SECURE_COOKIES=true
ACCESS_TOKEN_EXPIRE_MINUTES=720

# =============================================================================
# WORKDAY
# =============================================================================
WORKDAY_TENANT=ccfs
WORKDAY_USERNAME=
WORKDAY_PASSWORD=
WORKDAY_CLIENT_ID=
WORKDAY_CLIENT_SECRET=
WORKDAY_REFRESH_TOKEN=
WORKDAY_RECRUITING_URL=https://wd2-impl-services1.workday.com/ccm/Recruiting/v40.2
WORKDAY_STAFFING_URL=https://wd2-impl-services1.workday.com/ccm/Staffing/v40.2
WORKDAY_TOKEN_URL=https://wd2-impl-services1.workday.com/ccm/token

# =============================================================================
# AI (ANTHROPIC CLAUDE)
# =============================================================================
ANTHROPIC_API_KEY=sk-ant-...
CLAUDE_MODEL=claude-sonnet-4-5-20250929
CLAUDE_MAX_TOKENS=16384

# =============================================================================
# S3 STORAGE (separate credentials)
# =============================================================================
S3_BUCKET=airecruiter-files
S3_REGION=us-west-2
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=

# =============================================================================
# SES EMAIL (separate credentials)
# =============================================================================
SES_FROM_EMAIL=noreply@ccfs.com
SES_FROM_NAME=CCFS Talent Team
SES_REGION=us-west-2
SES_ACCESS_KEY_ID=
SES_SECRET_ACCESS_KEY=

# =============================================================================
# PROCESSOR
# =============================================================================
LOG_LEVEL=INFO
POLL_INTERVAL=300
SYNC_INTERVAL=300

# =============================================================================
# WEB (Next.js build args - used at build time)
# =============================================================================
NEXT_PUBLIC_SSO_ENABLED=true
NEXT_PUBLIC_SSO_URL=https://sso.ccfs.com
NEXT_PUBLIC_SSO_CLIENT_ID=recruiter2
NEXT_PUBLIC_DEV_LOGIN_ENABLED=false
NEXT_PUBLIC_API_URL=/recruiter2/api
NEXT_PUBLIC_APP_URL=https://admin.ccfs.com/recruiter2
